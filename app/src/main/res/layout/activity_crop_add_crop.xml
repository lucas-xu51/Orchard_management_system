<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".crop_add_Activity">

    <EditText
        android:id="@+id/cropName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_margin="16dp"
        android:hint="Enter Crop Name"
        android:inputType="text"
        tools:layout_editor_absoluteX="133dp"
        tools:layout_editor_absoluteY="135dp" />

    <ImageView
        android:id="@+id/cropImage"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:contentDescription="Select Crop Image"
        android:src="@drawable/ic_crop_placeholder"
        tools:layout_editor_absoluteX="105dp"
        tools:layout_editor_absoluteY="221dp" />

    <Button
        android:id="@+id/selectImageButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Select Image"
        tools:layout_editor_absoluteX="140dp"
        tools:layout_editor_absoluteY="513dp" />

    <Button
        android:id="@+id/confirmButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:onClick="onConfirmClick"
        android:text="Confirm"
        tools:layout_editor_absoluteX="156dp"
        tools:layout_editor_absoluteY="631dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
